{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "parser": "babel-eslint",
    "env": {
      "jest": true
    },
    "globals": {
      "document": true
    },
    "rules": {
      "react/forbid-prop-types": 0,
      "react/jsx-props-no-spreading": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [".js", ".tsx"]
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["./src"],
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    }
}